<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPF_Cartridge.ThemeFolder">

    <!--цвета-->
    <SolidColorBrush x:Key="ButtonPanelcolor" Color="White"/>
    <SolidColorBrush x:Key="BasicColor" Color="Black"/>
    <SolidColorBrush x:Key="TitleColor" Color="#e8e9ea" Opacity=".3"/>
    <SolidColorBrush x:Key="MainColor" Color="#e8e9ea" Opacity=".1"/>

    <Style TargetType="ScrollBar">
        <Style.Setters>
            <Setter Property="Background" Value="{StaticResource TitleColor}"/>
        </Style.Setters>
    </Style>


</ResourceDictionary>